<view class="container">
  <view class="header">
    <text class="title">申论助手</text>
  </view>
  
  <view class="chat-container">
    <view class="input-section">
      <text class="input-label">题目</text>
      <view class="textarea-container">
        <textarea 
          class="input-textarea" 
          placeholder="请输入题目内容" 
          placeholder-class="placeholder" 
          bindinput="onQuestionInput" 
          value="{{question}}" 
          auto-height 
          maxlength="-1"
          show-confirm-bar="{{false}}"
        />
      </view>
    </view>
    
    <view class="input-section">
      <text class="input-label">答案</text>
      <view class="textarea-container">
        <textarea 
          class="input-textarea" 
          placeholder="请输入答案内容（可选）" 
          placeholder-class="placeholder" 
          bindinput="onAnswerInput" 
          value="{{answer}}" 
          auto-height 
          maxlength="-1"
          show-confirm-bar="{{false}}"
        />
      </view>
    </view>
    
    <view class="button-container">
      <button class="submit-button" bindtap="submitContent" loading="{{isLoading}}" disabled="{{isLoading}}">{{isLoading ? '提交中...' : '提交'}}</button>
    </view>
  </view>
  
  <view class="response-container" wx:if="{{response}}">
    <view class="response-header">
      <text class="response-title">评价结果</text>
    </view>
    <view class="response-content">
      <textarea 
        class="response-textarea" 
        value="{{response}}" 
        disabled="true" 
        auto-height 
        maxlength="-1"
        show-confirm-bar="{{false}}"
      />
    </view>
  </view>
</view>