/**app.wxss**/
/* 全局样式 */
page {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  font-size: 28rpx;
  line-height: 1.6;
  color: #4a5568;
  background-color: #f7fafc;
  box-sizing: border-box;
}

/* 重置按钮样式 */
button {
  margin: 0;
  padding: 0;
  background: transparent;
  border: none;
  text-align: left;
  line-height: inherit;
  overflow: visible;
  border-radius: 0;
}

button::after {
  border: none;
}

/* 通用容器 */
.container {
  width: 100%;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

/* 加载状态 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx 0;
}

/* 文本溢出处理 */
.text-ellipsis {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 卡片样式 */
.card {
  background-color: #edf2f7;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
}